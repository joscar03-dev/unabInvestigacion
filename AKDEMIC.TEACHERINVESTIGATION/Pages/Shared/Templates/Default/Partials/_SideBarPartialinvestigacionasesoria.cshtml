@inject AKDEMIC.CORE.Services.General.Interfaces.IConfigurationService _configurationService
@{
    bool allowRegistration = false;
    _ = bool.TryParse(await _configurationService.GetValueByKey(AKDEMIC.CORE.Constants.ConfigurationConstants.TEACHERINVESTIGATION.ALLOW_REGISTRATION_REQUEST), out allowRegistration);
}
<style>
    html, body {
        font-family: "Droid Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-size: 12px;
    }

    .form-control {
        font-family: "Droid Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
        border-radius: 0;
        border-radius: .25rem;
    }

    .m-form .m-form__group {
        margin-bottom: 0;
        padding-top: 5px;
        padding-bottom: 5px;
    }

    .modal .modal-content .modal-header {
        padding: 15px;
    }

    label {
        display: inline-block;
        margin-bottom: 0rem;
    }

    .table th {
        font-weight: 600;
    }

    .m-aside-menu .m-menu__nav > .m-menu__item > .m-menu__heading .m-menu__link-text, .m-aside-menu .m-menu__nav > .m-menu__item > .m-menu__link .m-menu__link-text {
        font-size: 1.02rem;
        text-transform: initial;
        font-weight: 600;
    }

    .table th, .table td {
        padding: .5rem;
</style>


<ul class="m-menu__nav  m-menu__nav--dropdown-submenu-arrow ">
    <li class="m-menu__item " aria-haspopup="true" is-active-route asp-page="/Index">
        <a asp-page="/Index" class="m-menu__link ">
            <i class="m-menu__link-icon la la-home"></i>
            <span class="m-menu__link-text">
                Inicio
            </span>
        </a>
    </li>

    @*Modulo de Investigación*@
    @if (User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.ACOMPANIANTE) || 
    User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.EVALUATOR_COMMITTEE) ||
    User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.TEACHERS) ||
    User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.SUPERADMIN) ||
    User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.TEACHERINVESTIGATION_ADMIN) ||
    User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.INNOVATION_TECHNOLOGY_TRANSFER_UNIT) ||
    User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.RESEARCH_PROMOTION_UNIT))
    {
        @if (        User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.SUPERADMIN) ||
                     User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.TEACHERINVESTIGATION_ADMIN) ||
                     User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.INNOVATION_TECHNOLOGY_TRANSFER_UNIT) ||
                     User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.RESEARCH_PROMOTION_UNIT))
        {
            <li class="m-menu__item  m-menu__item--submenu" aria-haspopup="true" m-menu-submenu-toggle="hover">
                <a href="javascript:;" class="m-menu__link m-menu__toggle">
                <i class="m-menu__link-icon flaticon-map"></i>
                <span class="m-menu__link-text">
                    Administración
                </span>
                <i class="m-menu__ver-arrow la la-angle-right"></i>
            </a>
            <div class="m-menu__submenu ">
                <span class="m-menu__arrow"></span>
                <ul class="m-menu__subnav">
                        <li class="m-menu__item " aria-haspopup="true" asp-area="Admin" asp-page="/InvestigacionAsesoria/InvestigacionasesoriaAsesorPage/Index">
                            <a asp-area="Admin" asp-page="/InvestigacionAsesoria/InvestigacionasesoriaAsesorPage/Index" asp-route-area="Admin" class="m-menu__link ">
                                <i class="m-menu__link-bullet m-menu__link-bullet--dot"><span></span></i>
                                <span class="m-menu__link-text">
                                    Asesores
                                </span>
                            </a>
                        </li>
                        <li class="m-menu__item " aria-haspopup="true" asp-area="Admin" asp-page="/InvestigacionAsesoria/MaestroAlumnoPage/Index">
                            <a asp-area="Admin" asp-page="/InvestigacionAsesoria/MaestroAlumnoPage/Index" asp-route-area="Admin" class="m-menu__link ">
                                <i class="m-menu__link-bullet m-menu__link-bullet--dot"><span></span></i>
                                <span class="m-menu__link-text">
                                    Alumnos
                                </span>
                            </a>
                        </li>
                        <li class="m-menu__item " aria-haspopup="true" asp-area="Admin" asp-page="/InvestigacionAsesoria/InvestigacionasesoriaTipotrabajoinvestigacionPage/Index">
                            <a asp-area="Admin" asp-page="/InvestigacionAsesoria/InvestigacionasesoriaTipotrabajoinvestigacionPage/Index" asp-route-area="Admin" class="m-menu__link ">
                            <i class="m-menu__link-bullet m-menu__link-bullet--dot"><span></span></i>
                            <span class="m-menu__link-text">
                                Tipo de Investigación
                            </span>
                        </a>
                    </li>
                        <li class="m-menu__item " aria-haspopup="true" asp-area="Admin" asp-page="/InvestigacionAsesoria/InvestigacionasesoriaEstructurainvestigacionPage/Index">
                            <a asp-area="Admin" asp-page="/InvestigacionAsesoria/InvestigacionasesoriaEstructurainvestigacionPage/Index" asp-route-area="Admin" class="m-menu__link ">
                            <i class="m-menu__link-bullet m-menu__link-bullet--dot"><span></span></i>
                            <span class="m-menu__link-text">
                                Estructura de Investigación
                            </span>
                        </a>
                    </li>

                  </ul>
            </div>

        </li>
        }
        @if (User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.SUPERADMIN) ||
                     User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.TEACHERINVESTIGATION_ADMIN) ||
                     User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.INNOVATION_TECHNOLOGY_TRANSFER_UNIT) ||
                     User.IsInRole(AKDEMIC.CORE.Constants.GeneralConstants.ROLES.RESEARCH_PROMOTION_UNIT))
        {
            <li class="m-menu__item  m-menu__item--submenu" aria-haspopup="true" m-menu-submenu-toggle="hover">
                <a href="javascript:;" class="m-menu__link m-menu__toggle">
                <i class="m-menu__link-icon flaticon-map"></i>
                <span class="m-menu__link-text">
                    Reportes
                </span>
                <i class="m-menu__ver-arrow la la-angle-right"></i>
            </a>
            <div class="m-menu__submenu ">
                <span class="m-menu__arrow"></span>
                <ul class="m-menu__subnav">
                        <li class="m-menu__item " aria-haspopup="true"  asp-area="Report" asp-page="">
                            <a asp-area="Report" asp-page="" asp-route-area="Report" class="m-menu__link ">
                        <i class="m-menu__link-bullet m-menu__link-bullet--dot"><span></span></i>
                        <span class="m-menu__link-text">
                            Tesis
                        </span>
                    </a>
                    </li>
                       
                </ul>
            </div>

        </li>
        }
    }

   

</ul>

