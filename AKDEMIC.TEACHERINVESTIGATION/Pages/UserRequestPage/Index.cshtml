@page "/solicitud-registro-externo"
@model AKDEMIC.TEACHERINVESTIGATION.Pages.UserRequestPage.IndexModel
@{
    Layout = "~/Pages/Shared/Templates/Portal/_Layout.cshtml";
}

<div class="m-content" style="max-width:920px; margin:auto">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <h3 class="m-portlet__head-text" style="display:initial;">
                        Solicitud de Registro Externo
                    </h3>
                </div>
            </div>
        </div>
        <form id="create-form" class="m-form m-form--state" method="post" autocomplete="off">
            <div class="m-portlet__body">
                <div class="m-form--label-align-right m--margin-bottom-20">
                    <div class="form-group m-form__group">
                        <label class="required-form-label">Apellido Paterno</label>
                        <input name="PaternalSurname" class="form-control m-input" placeholder="Apellido Paterno" aria-invalid="false" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label class="required-form-label">Apellido Materno</label>
                        <input name="MaternalSurname" class="form-control m-input" placeholder="Apellido Materno" aria-invalid="false" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label class="required-form-label">Nombres</label>
                        <input name="Name" class="form-control m-input" placeholder="Nombres" aria-invalid="false" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label class="required-form-label">DNI</label>
                        <input name="Dni" class="form-control m-input" placeholder="DNI" pattern="[0-9]+" onkeypress="if(this.value.length==8) return false;" aria-invalid="false" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label class="required-form-label">Correo Electrónico</label>
                        <input name="Email" class="form-control m-input" placeholder="Correo" aria-invalid="false" required>
                    </div>
                    <div class="form-group m-form__group">
                        <label class="required-form-label">Tipo</label>
                        <select name="Type" class="form-control" required>
                            <option value="-1" disabled selected>Selecciona un Tipo</option>
                            @foreach (var item in AKDEMIC.CORE.Constants.GeneralConstants.USERREQUEST_TYPE.VALUES)
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        </select>
                    </div>
                    <div class="form-group m-form__group">
                        <label class="form-label">Teléfono</label>
                        <input name="PhoneNumber" class="form-control m-input" placeholder="Teléfono" aria-invalid="false">
                    </div>
                    <div class="form-group m-form__group">
                        <label class="form-label">Dirección</label>
                        <input name="Address" class="form-control m-input" placeholder="Teléfono" aria-invalid="false">
                    </div>
                </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit m--align-right m--margin-top-10">
                <div class="m-form__actions">
                    <button id="btnSave" class="btn btn-primary m-btn m-btn--custom m-btn--icon" type="submit">
                        <span>
                            <i class="la la-save"></i>
                            &nbsp;&nbsp;
                            <span>
                                Guardar
                            </span>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/userrequest/index.js" asp-append-version="true"></script>
}
