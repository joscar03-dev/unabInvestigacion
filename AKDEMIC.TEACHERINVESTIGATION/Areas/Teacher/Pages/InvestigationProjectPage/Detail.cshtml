@page "/investigador/proyectos/{InvestigationProjectId:Guid}/detalle"
@using Microsoft.AspNetCore.Html
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Teacher.Pages.InvestigationProjectPage.DetailModel
@{
    ViewBag.Breadcrumbs = new[]
    {
        new BreadcrumbViewData { Name = "Mis Proyectos", Url = "/investigador/proyectos" },
        new BreadcrumbViewData { Name = "Detalle", Url = null }
    };

}



<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Proyecto: @Model.Input.ProjectTitle
                    </h3>
                </div>
            </div>
            <div class="m-portlet__head-tools">
                <ul class="m-portlet__nav">
                    <li class="m-portlet__nav-item">
                        <button data-toggle="modal" data-target="#finalDocumentModal" type="submit" class="btn btn-primary btn-sm m-btn m-btn--icon" title="Subir Informe Final">
                            <span>
                                <i class="la la-th"></i>
                                <span>Subir Informe Final</span>
                            </span>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
        <form id="create-form" class="m-form m-form--state" asp-area="Teacher" asp-page-handler="SaveProject" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Input.InvestigationProjectId" />
            <div class="m-portlet__body">
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Objetivo General</label>
                        <textarea asp-for="@Model.Input.GeneralGoal" class="summernote mv_summernote form-control m-input"></textarea>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Objetivos Especificos</label>
                        <textarea asp-for="@Model.Input.SpecificGoal" class="summernote mv_summernote form-control m-input"></textarea>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Tipo de Proyecto</label>
                        <select asp-for="Input.InvestigationProjectTypeId" class="form-control">
                            <option value="0" disabled>Seleccione un tipo de proyecto</option>
                        </select>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Lugar de Ejecución</label>
                        <input asp-for="Input.ExecutionAddress" placeholder="Lugar de ejecución" class="form-control" />
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Fuente de Financiamiento</label>
                        <input asp-for="Input.FinancingInvestigation" class="form-control" disabled />
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        @if (string.IsNullOrEmpty(Model.Input.GanttDiagramUrl))
                        {
                            <label class="form-control-label">Diagrama de Gant</label>
                            <div class="custom-file">
                                <input class="form-control m-input custom-file-input" asp-for="Input.GanttDiagramFile" type="file" accept="application/pdf, application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document" placeholder="Seleccionar archivo">
                                <label class="custom-file-label selected">Seleccionar archivo</label>
                            </div>
                        }
                        else
                        {
                            <label id="gantt_label" class="form-control-label">Diagrama de Gant <a href="/documentos/@Model.Input.GanttDiagramUrl" title="Descargar" class="m-widget4__icon custom--document-link" download><i class="la la-download custom--document-download"></i></a></label>
                            <div class="custom-file">
                                <input class="form-control m-input custom-file-input" asp-for="Input.GanttDiagramFile" type="file" accept="application/pdf, application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document" placeholder="Seleccionar archivo">
                                <label class="custom-file-label selected">Seleccionar archivo</label>
                            </div>
                            <div class="form-control-feedback">*Seleccionar en caso sea necesario reemplazar el documento vigente.</div>
                        }

                    </div>
                </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit m--align-right m--margin-top-10">
                <div class="m-form__actions">
                    <button id="btnSaveProject" class="btn btn-primary m-btn m-btn--custom m-btn--icon" type="submit">
                        <span>
                            <i class="la la-save"></i>
                            &nbsp;&nbsp;
                            <span>
                                Guardar
                            </span>
                        </span>
                    </button>
                </div>
            </div>
        </form>

    </div>

