<!--Add Modal Informe final-->
<div class="modal fade" id="finalDocumentModal" tabindex="-1000" role="dialog" aria-labelledby="detailLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Subir Informe Final
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="finalDocument-form" class="m-form m-form--state" asp-area="Teacher" asp-page-handler="FinalDocument" method="post" enctype="multipart/form-data">
                <input name="Id" hidden />
                <div class="modal-body">
                    @if (string.IsNullOrEmpty(Model.Input.FinalReportUrl))
                    {
                        <div class="m-form__group">
                            <label class="m-form__group required-form-label">Informe Final</label>
                            <div class=" m-form__group-sub">
                                <div class="custom-file">
                                    <input class="form-control m-input custom-file-input" asp-for="Input.FinalReportFile" type="file" accept="application/pdf, application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document" placeholder="Seleccionar archivo" required>
                                    <label class="custom-file-label selected">Seleccionar Archivo...</label>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="m-form__group">
                            <label id="finalDocument_label" class="form-control-label">Diagrama de Gant <a href="/documentos/@Model.Input.FinalReportUrl" title="Descargar" class="m-widget4__icon custom--document-link" download><i class="la la-download custom--document-download"></i></a></label>
                            <div class="custom-file">
                                <input class="form-control m-input custom-file-input" asp-for="Input.FinalReportFile" type="file" accept="application/pdf, application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document" placeholder="Seleccionar archivo" required>
                                <label class="custom-file-label selected">Seleccionar Archivo...</label>
                            </div>
                            <div class="form-control-feedback">*Seleccionar en caso sea necesario reemplazar el documento vigente.</div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <div style="text-align:right;">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            Cancelar
                        </button>
                        <button id="btnSaveFinalDocument" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                            <span class="ladda-label">Guardar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
