            </div>
        </div>
    </div>
    <!--AQUI TERMINA EL TAB PANEL-->
    <!--AQUI EMPIEZA EL CRUD DE AUTHOR-->
    <!--CREATE Modal Author-->
    <div class="modal fade" id="publicationAuthorModal" tabindex="-1000" role="dialog" aria-labelledby="detailLabel" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        Registrar un Autor
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="publicationAuthor-form" class="m-form m-form--state" asp-area="Teacher" asp-page-handler="CreatePublicationAuthor" method="post" enctype="multipart/form-data">
                    <input name="PublicationId" value="@Model.Input.Id" type="hidden">
                    <div class="modal-body">
                        <div class="form-group m-form__group">
                            <label class="required-form-label">DNI</label>
                            <input type="text" name="Dni" placeholder="DNI" pattern="^[0-9]*$" minlength="8" maxlength="8" class="form-control m-input" required />
                        </div>
                        <div class="m-form__group">
                            <label class="required-form-label">Apellido Paterno</label>
                            <input name="PaternalSurname" placeholder="Apellido Paterno" type="text" class="form-control m-input" required />
                        </div>
                        <div class="m-form__group">
                            <label class="required-form-label">Apellido Materno</label>
                            <input name="MaternalSurname" placeholder="Apellido Materno" type="text" class="form-control m-input" required />
                        </div>
                        <div class="m-form__group">
                            <label class="required-form-label">Nombres</label>
                            <input name="Name" placeholder="Nombres" type="text" class="form-control m-input" required />
                        </div>
                        <div class="m-form__group">
                            <label class="required-form-label">Email</label>
                            <input name="Email" placeholder="Email" type="text" class="form-control m-input" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div style="text-align:right;">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                Cancelar
                            </button>
                            <button id="btnSavePublicationAuthor" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                                <span class="ladda-label">Guardar</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--Edit Modal Author-->
    <div class="modal fade" id="publicationAuthorEditModal" tabindex="-1000" role="dialog" aria-labelledby="detailLabel" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        Editar Autor
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="publicationAuthor-editform" class="m-form m-form--state" asp-area="Teacher" asp-page-handler="EditPublicationAuthor" method="post" enctype="multipart/form-data">
                    <input name="Id" hidden />
                    <input name="PublicationId" value="@Model.Input.Id" hidden />
                    <div class="modal-body">
                        <div class="form-group m-form__group">
                            <label class="required-form-label">DNI</label>
                            <input type="text" name="Dni" placeholder="DNI" pattern="^[0-9]*$" minlength="8" maxlength="8" class="form-control m-input" required />
                        </div>
                        <div class="m-form__group">
                            <label class="required-form-label">Apellido Paterno</label>
                            <input name="PaternalSurname" placeholder="Apellido Paterno" type="text" class="form-control m-input" required />
                        </div>
                        <div class="m-form__group">
                            <label class="required-form-label">Apellido Materno</label>
                            <input name="MaternalSurname" placeholder="Apellido Materno" type="text" class="form-control m-input" required />
                        </div>
                        <div class="m-form__group">
                            <label class="required-form-label">Nombres</label>
                            <input name="Name" placeholder="Nombres" type="text" class="form-control m-input" required />
                        </div>
                        <div class="m-form__group">
                            <label class="required-form-label">Email</label>
                            <input name="Email" placeholder="Email" type="text" class="form-control m-input" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div style="text-align:right;">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                Cancelar
                            </button>
                            <button id="btnEditPublicationAuthor" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                                <span class="ladda-label">Guardar</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
