@page "/investigador/publicaciones/{publicationId:Guid}/editar"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Teacher.Pages.PublicationPage.EditModel
@{
    ViewData["Title"] = "Mis Publicaciones";
    ViewBag.Breadcrumbs = new[]
    {
        new BreadcrumbViewData {Name="Mis Publicaciones", Url = "/investigador/publicaciones"},
        new BreadcrumbViewData {Name="Editar", Url = null},
    };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Datos de Publicación
                    </h3>
                </div>
            </div>
        </div>
        <form id="edit-form" class="m-form m-form--state" asp-area="Teacher" method="post" enctype="multipart/form-data">
            <input asp-for="Input.Id" hidden />
            <input id="AuthorShipOrderId" value="@Model.Input.AuthorShipOrderId" hidden />
            <input id="OpusTypeId" value="@Model.Input.OpusTypeId" hidden />
            <input id="PublicationFunctionId" value="@Model.Input.PublicationFunctionId" hidden />
            <input id="IndexPlaceId" value="@Model.Input.IndexPlaceId" hidden />
            <input id="IdentificationTypeId" value="@Model.Input.IdentificationTypeId" hidden />
            <div class="m-portlet__body">
                <div class="m-form__content">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="m-form_alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div id="alert-text" class="m-alert__text">
                            @ViewBag.ErrorMessage
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Categoría de trabajo</label>
                        <select asp-for="Input.WorkCategory" name="Input.WorkCategory" class="form-control" required>
                            <option value="0" selected disabled>Seleccione un Categoría de trabajo</option>
                            @foreach (var d in TeacherInvestigationConstants.Publication.WorkCategory.VALUES)
                            {
                                <option value="@d.Key">@d.Value</option>
                            }

                        </select>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Tipo de Obra</label>
                        <select asp-for="Input.OpusTypeId" name="Input.OpusTypeId" class="form-control" required>
                            <option value="0" selected disabled>Seleccione un Tipo de Obra</option>
                        </select>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Función</label>
                        <select asp-for="Input.PublicationFunctionId" name="Input.PublicationFunctionId" class="form-control">
                            <option value="0" selected disabled>Seleccione una Función</option>
                        </select>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Orden Auditoría</label>
                        <select asp-for="Input.AuthorShipOrderId" name="Input.AuthorShipOrderId" class="form-control">
                            <option value="0" selected disabled>Seleccione una Orden Autoría</option>
                        </select>
                    </div>
                </div>

                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Indexada</label>
                        <select asp-for="Input.IndexPlaceId" name="Input.IndexPlaceId" class="form-control">
                            <option value="0" selected disabled>Seleccione una Función</option>
                        </select>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Tipo de Identificación</label>
                        <select asp-for="Input.IdentificationTypeId" name="Input.IdentificationTypeId" class="form-control">
                            <option value="0" selected disabled>Seleccione una Orden Autoría</option>
                        </select>
                    </div>
                </div>

                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.Title" class="required-form-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.Title" class="form-control m-input" placeholder="Título" autocomplete="off" required />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.SubTitle" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.SubTitle" class="form-control m-input" placeholder="Sub Título" autocomplete="off" />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.Journal" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.Journal" class="form-control m-input" placeholder="Revista" autocomplete="off" />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.Description" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.Description" class="form-control m-input" placeholder="Descripción" autocomplete="off" />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group m-form__group row">

                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.Volume" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.Volume" class="form-control m-input" placeholder="Volumen" autocomplete="off" />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.Fascicle" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.Fascicle" class="form-control m-input" placeholder="Fascículo" autocomplete="off" />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                </div>

                <div class="form-group m-form__group row">



                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.MainAuthor" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.MainAuthor" class="form-control m-input" placeholder="Autor Principal" autocomplete="off" />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.PublishingHouse" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.PublishingHouse" class="form-control m-input" placeholder="Editorial" autocomplete="off" />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.DOI" class="form-control-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.DOI" class="form-control m-input" placeholder="DOI" autocomplete="off" />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="m-form__group-sub col-lg-6">
                        <label asp-for="Input.PublishDate" class="required-form-label"></label>
                        <div class="m-input-icon m-input-icon--right">
                            <input asp-for="Input.PublishDate" class="form-control m-input" required placeholder="Fecha de publicación" readonly />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-calendar"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>


                <div class="form-group m-form__group row">
                    @*   <div class="m-form__group-sub col-lg-6">
                    <label asp-for="Input.PhoneNumber" class="form-control-label"></label>
                    <div class="m-input-icon m-input-icon--right">
                    <input asp-for="Input.PhoneNumber" class="form-control m-input" placeholder="Teléfono" pattern="^[1-9][0-9]{6,9}$" minlength="7" maxlength="9" autocomplete="off" />
                    <span class="m-input-icon__icon m-input-icon__icon--right">
                    <span>
                    <i class="la la-phone"></i>
                    </span>
                    </span>
                    </div>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                    <label asp-for="Input.BirthDate" class="required-form-label"></label>
                    <div class="m-input-icon m-input-icon--right">
                    <input asp-for="Input.BirthDate" class="form-control m-input" required placeholder="Fecha de Nacimiento" readonly />
                    <span class="m-input-icon__icon m-input-icon__icon--right">
                    <span>
                    <i class="la la-calendar"></i>
                    </span>
                    </span>
                    </div>
                    </div>*@
                </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit m--align-right m--margin-top-10">
                <div class="m-form__actions">
                    <button id="btnSave" class="btn btn-primary m-btn m-btn--custom m-btn--icon" type="submit">
                        <span>
                            <i class="la la-save"></i>
                            &nbsp;&nbsp;
                            <span>
                                Guardar
                            </span>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <!--AQUI EMPIEZA EL TAB PANEL-->
