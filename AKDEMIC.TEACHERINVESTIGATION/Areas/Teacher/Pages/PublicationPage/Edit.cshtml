    <div class="modal fade" id="publicationFileModal" tabindex="-1000" role="dialog" aria-labelledby="detailLabel" aria-hidden="true">
        <div class="modal-dialog " role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                        Registrar un Archivo
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="publicationFile-form" class="m-form m-form--state" asp-area="Teacher" asp-page-handler="CreatePublicationFile" method="post" enctype="multipart/form-data">
