<!--External Evaluator-->
<div class="modal fade" id="exernal_evaluator_modal" tabindex="-1000" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="detailLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Evaluador Externos
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="external_evaluator_form" asp-page-handler="AddExternalEvaluator" class="m-form m-form--state" method="post">
                <input name="IncubatorConvocationId" value="@Model.IncubatorConvocationId" hidden />
                <div class="modal-body">
                    <div class="form-group m-form__group">
                        <label>Usuario</label>
                        <div class="d-flex">
                            <div style="width:90%">
                                <select class="m-select2" required name="UserId" style="width:80% !important;"></select>
                            </div>
                            <div style="width:10%">
                                <button title="Agregar" type="submit" class="btn btn-primary m-btn m-btn--icon m-btn--icon-only" style="height:100% !important; width:50px !important;">
                                    <i class="la la-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <table id="external_evaluator_datatable" class="table table-striped"></table>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
