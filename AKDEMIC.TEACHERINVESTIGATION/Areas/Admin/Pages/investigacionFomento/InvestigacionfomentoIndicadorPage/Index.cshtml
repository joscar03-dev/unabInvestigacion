@page "/investigacionfomento/indicador"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Admin.Pages.InvestigacionFomento.InvestigacionfomentoIndicadorPage.IndexModel
@{
    ViewData["Title"] = "Indicadores de Convocatorias";
    ViewBag.Breadcrumbs = new[]
    {
        new BreadcrumbViewData {Name="Indicadores de Convocatorias", Url = null},
    };
        Layout = "~/Pages/Shared/Templates/Default/_Layoutinvestigacionfomento.cshtml";

}


<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <h3 class="m-portlet__head-text" style="display:initial;">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                        <button data-toggle="modal" data-target="#addModal" class="btn btn-primary m-btn m-btn--icon">
                            <span>
                                <i class="la la-plus"></i>
                                <span>Nuevo Indicador</span>
                            </span>
                        </button>
                        <div class="m-separator m-separator--dashed d-xl-none"></div>
                    </div>
                </div>
            </div>
            @Html.AntiForgeryToken()
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>


<!--Add Modal-->
<div class="modal fade" id="addModal" tabindex="-1000" role="dialog" aria-labelledby="detailLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Agregar Indicador
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-form" class="m-form m-form--state" asp-area="Admin" asp-page-handler="Create" method="post">
                <div class="modal-body">
                    
                    <div class="m-form__group">
                        <label class="required-form-label">Código:</label>
                        <input name="codigo" type="text" class="form-control m-input" placeholder="Código" required />
                    </div>
                    <div class="m-form__group">
                        <label class="required-form-label">Nombre:</label>
                        <input name="nombre" type="text" class="form-control m-input" placeholder="Nombre" required />
                    </div>
                    <div class="">
                        <label >Descripción:</label>
                        <textarea name="descripcion" class="form-control m-input" placeholder="Descripción"></textarea>
                    </div>
                    <div class="">
                        <label >Activo:</label>
                        <input value="1" name="activo" type="checkbox" placeholder="Activo"  />
                    </div>
                </div>
                <div class="modal-footer">
                    <div style="text-align:right;">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            Cancelar
                        </button>
                        <button id="btnSave" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                            <span class="ladda-label">Guardar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!--Edit Modal-->
<div class="modal fade" id="editModal" tabindex="-1000" role="dialog" aria-labelledby="detailLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Editar Indicador
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="edit-form" class="m-form m-form--state" asp-area="Admin" asp-page-handler="Edit" method="post">
                <input name="Id" hidden />
                <div class="modal-body">
                    
                    <div class="m-form__group">
                        <label class="required-form-label">Código:</label>
                        <input name="codigo" type="text" class="form-control m-input" placeholder="Código" required />
                    </div>
                    <div class="m-form__group">
                        <label class="required-form-label">Nombre:</label>
                        <input name="nombre" type="text" class="form-control m-input" placeholder="Nombre" required />
                    </div>
                    <div class="">
                        <label >Descripción:</label>
                        <textarea name="descripcion" class="form-control m-input" placeholder="Descripción"></textarea>
                    </div>
                    <div class="">
                        <label >Activo:</label>
                        <input value="1" name="activo" type="checkbox" placeholder="Activo"  />
                    </div>
                </div>
                <div class="modal-footer">
                    <div style="text-align:right;">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            Cancelar
                        </button>
                        <button id="btnEdit" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                            <span class="ladda-label">Guardar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/areas/admin/investigacionfomento/investigacionfomentoindicador/index.js" asp-append-version="true"></script>
}
