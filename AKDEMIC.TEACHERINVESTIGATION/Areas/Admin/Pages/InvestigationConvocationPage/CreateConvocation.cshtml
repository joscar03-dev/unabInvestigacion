@page "/admin/convocatorias/crear"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Admin.Pages.InvestigationConvocationPage.CreateConvocationModel
@{
        ViewData["Title"] = "Crear Convocatoria";
    ViewBag.Breadcrumbs = new[]
    {
new BreadcrumbViewData {Name="Gestión de Convocatorias", Url= "/admin/convocatorias"},
new BreadcrumbViewData {Name="Crear Convocatoria", Url = null},
    };
}



<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Creación de Convocatoria
                    </h3>
                </div>
            </div>
        </div>
        <form id="create-form" class="m-form m-form--state m-form--fit" asp-area="Admin" method="post" enctype="multipart/form-data">
            <div class="m-portlet__body">
                <div class="m-card-profile" style="width:100%">
                    <div class="m-card-profile__title">
                        Foto
                    </div>
                    <div class="m-card-user" style="margin:auto">
                        <div class="m-card-profile" style="text-align:center">
                            <img id="current-picture" style="width:50%;height:100%;" src="/images/default-banner.jpg" alt="" />
                        </div>
                    </div>
                    <div class="m-card-profile__details">
                        <div class="form-group m-form__group row">
                            <div class="m-form__group-sub col-lg-6 mx-auto">
                                <div class="custom-file">
                                    <input asp-for="Input.PictureFile" type="file" class="custom-file-input" placeholder="Imagen" accept="image/jpg, image/jpeg, image/png">
                                    <label class="custom-file-label">Seleccione archivo</label>
                                </div>
                                <label><b>Sólo se permite archivos de tipo .jpg, .png, .jpeg</b></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-4">
                        <label class="required-form-label">Código</label>
                        <input asp-for="Input.Code" class="form-control m-input" required/>
                    </div>
                    <div class="m-form__group-sub col-lg-8">
                        <label class="required-form-label">Nombre</label>
                        <input asp-for="Input.Name" class="form-control m-input" required />
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Fecha de Inicio</label>
                        <div class="input-group">
                            <input asp-for="Input.StartDate" class="form-control datepicker-input" required/>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="la la-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Fecha de Fin</label>
                        <div class="input-group">
                            <input asp-for="Input.EndDate" class="form-control datepicker-input" required/>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="la la-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Fecha de Inicio de Postulación</label>
                        <div class="input-group">
                            <input asp-for="Input.InscriptionStartDate" class="form-control datepicker-input" required/>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="la la-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Fecha de Fin de Postulación </label>
                        <div class="input-group">
                            <input asp-for="Input.InscriptionEndDate" class="form-control datepicker-input" required/>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="la la-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-12">
                        <label class="required-form-label">Descripción</label>
                        <textarea asp-for="Input.Description" class="summernote mv_summernote"></textarea>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-4">
                        <label class="required-form-label">Puntaje Mínimo</label>
                        <input asp-for="Input.MinScore" class="form-control m-input" required/>
                    </div>
                    <div class="m-form__group-sub col-lg-4">
                        <label class="form-control-label">¿Permite Consultas?</label>
                        <div class="m-input-icon m-input-icon--right m--padding-left-25">
                            <input asp-for="Input.AllowInquiries" type="checkbox" />
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row" id="InquiryContainer" style="display:none">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Fecha de Inicio de Consultas</label>
                        <div class="input-group">
                            <input asp-for="Input.InquiryStartDate" class="form-control datepicker-input" />
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="la la-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="m-form__group-sub col-lg-6">
                        <label class="form-control-label">Fecha de Fin de Consultas</label>
                        <div class="input-group">
                            <input asp-for="Input.InquiryEndDate" class="form-control datepicker-input" />
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="la la-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit m--align-right m--margin-top-10">
                <div class="m-form__actions">
                    <button id="btnSave" class="btn btn-primary m-btn m-btn--custom m-btn--icon" type="submit">
                        <span>
                            <i class="la la-save"></i>
                            &nbsp;&nbsp;
                            <span>
                                Guardar
                            </span>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>







@section Scripts{
    <script src="~/js/areas/admin/investigationconvocation/create.js" asp-append-version="true"></script>
}