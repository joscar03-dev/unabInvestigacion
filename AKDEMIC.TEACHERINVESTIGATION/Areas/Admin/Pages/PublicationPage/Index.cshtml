@page "/admin/publicaciones"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Admin.Pages.PublicationPage.IndexModel
@{
    ViewData["Title"] = "Publicaciones";
    ViewBag.Breadcrumbs = new[]
    {
        new BreadcrumbViewData {Name="Publicaciones", Url = null},
    };
}


<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <h3 class="m-portlet__head-text" style="display:initial;">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
          <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-6">
                                <label>Categoría de trabajo</label>
                                <select name="workCategory" id="workCategory" class="form-control"> 
                                    <option value="0" selected>Todos</option>
                                    @foreach(var d in TeacherInvestigationConstants.Publication.WorkCategory.VALUES)
                                    {
                                        <option value="@d.Key">@d.Value</option>
                                    }

                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-6">
                                <label>Tipo de Obra</label>
                                <select name="opusTypeId" id="opusTypeId" class="form-control"> 
                                    <option value="0" selected>Todos</option>
                                </select>
                            </div>
                            <div class="form-group m-form__group col-xl-6">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.AntiForgeryToken()
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/areas/admin/publication/index.js" asp-append-version="true"></script>
}