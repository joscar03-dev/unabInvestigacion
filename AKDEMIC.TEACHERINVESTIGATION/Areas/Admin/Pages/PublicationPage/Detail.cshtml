@page "/admin/publicaciones/{publicationId:Guid}/detalle"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Admin.Pages.PublicationPage.DetailModel
@{
    ViewBag.Breadcrumbs = new[]
    {
        new BreadcrumbViewData {Name="Publicaciones", Url = "/admin/publicaciones"},
        new BreadcrumbViewData {Name="Detalle", Url = null},
    };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Datos de Publicación
                    </h3>
                </div>
            </div>
        </div>

        <input asp-for="Input.Id" hidden />
        <div class="m-portlet__body">
            <div class="m-form__content">
                <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="m-form_alert">
                    <div class="m-alert__icon">
                        <i class="la la-warning"></i>
                    </div>
                    <div id="alert-text" class="m-alert__text">
                        @ViewBag.ErrorMessage
                    </div>
                    <div class="m-alert__close">
                        <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>

            <div class="form-group m-form__group row">
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Creador</label>
                    <input asp-for="Input.UserFullName" class="form-control m-input"  autocomplete="off" disabled />
                </div>
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Usuario</label>
                    <input asp-for="Input.UserName" class="form-control m-input" autocomplete="off" disabled />
                </div>
            </div>

            <div class="form-group m-form__group row">
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Categoría de Trabajo</label>
                    <input asp-for="Input.WorkCategoryName" class="form-control m-input"  autocomplete="off" disabled />
                </div>
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Tipo de Trabajo</label>
                    <input asp-for="Input.OpusTypeName" class="form-control m-input" autocomplete="off" disabled />
                </div>
            </div>
            <div class="form-group m-form__group row">
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Función</label>
                    <input asp-for="Input.PublicationFunctionName" class="form-control m-input"  autocomplete="off" disabled />
                </div>
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Orden Autoría</label>
                    <input asp-for="Input.AuthorShipOrderName" class="form-control m-input"  autocomplete="off" disabled />
                </div>
            </div>

            <div class="form-group m-form__group row">
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Indexada</label>
                    <input asp-for="Input.IndexPlaceName" class="form-control m-input"  autocomplete="off" disabled />
                </div>
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Identificación</label>
                    <input asp-for="Input.IdentificationTypeName" class="form-control m-input"  autocomplete="off" disabled />
                </div>
            </div>

            <div class="form-group m-form__group row">
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Título</label>
                    <input asp-for="Input.Title" class="form-control m-input"  autocomplete="off" disabled />
                </div>
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Sub Título</label>
                    <input asp-for="Input.SubTitle" class="form-control m-input"  autocomplete="off" disabled />
                </div>
            </div>

            <div class="form-group m-form__group row">
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Revista</label>
                    <input asp-for="Input.Journal" class="form-control m-input"  autocomplete="off" disabled />
                </div>
                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Descripción</label>
                    <input asp-for="Input.Description" class="form-control m-input"  autocomplete="off" disabled />
                </div>
            </div>

            <div class="form-group m-form__group row">

                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Volumen</label>
                    <input asp-for="Input.Volume" class="form-control m-input" autocomplete="off" disabled />
                </div>

                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Fasículo</label>
                    <input asp-for="Input.Fascicle" class="form-control m-input"  autocomplete="off" disabled />
                </div>
            </div>

            <div class="form-group m-form__group row">


                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Autor Principal</label>
                    <input asp-for="Input.MainAuthor" class="form-control m-input" autocomplete="off" disabled />
                </div>

                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Editorial</label>
                    <input asp-for="Input.PublishingHouse" class="form-control m-input" autocomplete="off" disabled />
                </div>
            </div>

            <div class="form-group m-form__group row">

                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">DOI</label>
                    <input asp-for="Input.DOI" class="form-control m-input" autocomplete="off" disabled />
                </div>

                <div class="m-form__group-sub col-lg-6">
                    <label class="required-form-label">Fecha de publicación</label>
                    <input asp-for="Input.PublishDate" class="form-control m-input"  autocomplete="off" disabled />
                </div>

            </div>



        </div>

    </div>
    <!--AQUI EMPIEZA EL TAB PANEL-->
    <div class="m-portlet m-portlet--tabs">
        <div class="m-portlet__head">
            <div class="m-portlet__head-tools">
                <ul class="nav nav-fill m-tabs-line m-tabs-line--primary m-tabs-line--2x" role="tablist">
                    <li class="nav-item m-tabs__item">
                        <a class="nav-link m-tabs__link active" href="#tab_1" data-toggle="tab" role="tab">
                            <i class="la la-info-circle"></i>
                            Autores
                        </a>
                    </li>
                    <li class="nav-item m-tabs__item">
                        <a class="nav-link m-tabs__link" href="#tab_2" data-toggle="tab" role="tab">
                            <i class="fa fa-file"></i>
                            Archivos
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1" role="tabpanel">
                    <div class="m-portlet__body m-portlet__body--no-padding">
                        <table class="table table-striped table-bordered" id="author-datatable"></table>
                    </div>
                </div>
                <div class="tab-pane" id="tab_2" role="tabpanel">
                    <div class="m-portlet__body m-portlet__body--no-padding">

                        <table class="table table-striped table-bordered" id="file-datatable"></table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--AQUI TERMINA EL TAB PANEL-->
</div>




@section Scripts{
    <script src="~/js/areas/admin/publication/detail.js" asp-append-version="true"></script>
}