@page "/admin/solicitudes-de-registro-externo"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Admin.Pages.UserRequestPage.IndexModel
@{
    ViewBag.Breadcrumbs = new[]
        {
        new BreadcrumbViewData {Name="Solicitud de Registro Externo", Url = null},
    };
}


<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Solicitudes de Registro Externo
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <label>&emsp;</label>
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                        <button data-toggle="modal" data-target="#sendInvitationModal" class="btn btn-primary m-btn m-btn--icon">
                            <span>
                                <i class="la la-plus"></i>
                                <span>Nuevo Solicitud</span>
                            </span>
                        </button>
                        <div class="m-separator m-separator--dashed d-xl-none"></div>
                    </div>
                </div>
            </div>
            @Html.AntiForgeryToken()
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

<!--SendInvitation Modal-->
<div class="modal fade" id="sendInvitationModal" tabindex="-1000" role="dialog" aria-labelledby="detailLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Enviar invitación
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="send-invitation-form" class="m-form m-form--state" asp-area="Admin" asp-page-handler="SendInvitationEmail" method="post">
                <div class="modal-body">
                    <div class="m-form__group">
                        <label class="required-form-label">Correo Electronico:</label>
                        <input name="Email" type="email" class="form-control m-input" placeholder="Email" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <div style="text-align:right;">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">
                            Cancelar
                        </button>
                        <button id="btnSend" type="submit" class="btn btn-primary ladda-button" data-style="slide-down">
                            <span class="ladda-label">Guardar</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/js/areas/admin/userrequest/index.js" asp-append-version="true"></script>
}



