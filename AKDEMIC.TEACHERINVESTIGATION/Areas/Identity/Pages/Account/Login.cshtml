                        && Model.AllowRegistration)
                {
                    <div>
                        <a class="forget-password-label" asp-page="/UserRequestPage/Index">Solicitar registro al sistema</a>
                    </div>
                }
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        $(".group>i").hide();
        $(".group>i").click(function () {
            var x = document.getElementById("Input_Password");
            if (x.type === "password") {
                x.type = "text";
                this.className = "fa fa-eye-slash";
            }
            else {
                x.type = "password";
                this.className = "fa fa-eye";
            }
        });
        $("#Input_Password").on("focus", function () {
            $(".group>i").show();
            $(".ico:eq(1)").hide();
        }).on("blur", function () {
            if (this.value != "") return;
            $(".group>i").hide();
            $(".ico:eq(1)").show();
        });
    </script>
    <script src="~/js/areas/identity/account/login.js" asp-append-version="true"></script>
} *@

