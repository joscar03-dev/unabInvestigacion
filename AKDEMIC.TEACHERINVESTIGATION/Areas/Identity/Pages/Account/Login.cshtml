@page "/login"
@model LoginModel

@{
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
}
<div class="m-login__wrapper">
    <div class="form">
        <a href="#">
            <img class="logo" src="~/images/themes/@AKDEMIC.CORE.Constants.GeneralConstants.GetTheme()/logo.png">
        </a>
        <h1>@AKDEMIC.TEACHERINVESTIGATION.Helpers.ConstantHelpers.PROJECT.NAME.ToUpper()</h1>
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" id="main_form_login" method="post">
            <div asp-validation-summary="All" class="text-danger" style="font-weight: 500;"></div>
            <div class="group">
                <input asp-for="Input.UserName" placeholder="USUARIO" name="username" autocomplete="off" />
                <img class="ico" src="~/images/login/user.svg" />
                <div class="bar"></div>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="group">
                <input asp-for="Input.Password" type="password" placeholder="CONTRASEÑA" name="password" />
                <i class="fa fa-eye"></i>
                <img class="ico" src="~/images/login/pass.svg" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="bar"></div>
            </div>
            <div class="group">
                <button id="m_login_signin_submit" class="btn button-submit">
                    INGRESAR
                </button>
                <a class="forget-password-label" asp-page="/Account/ForgotPassword">¿Olvidaste tu contraseña?</a>
                <div>
                    <a class="forget-password-label" asp-page="/InvestigationConvocationPage/Index">Ver Convocatorias</a>
                </div>
                @if (AKDEMIC.CORE.Constants.GeneralConstants.Institution.VALUE == AKDEMIC.CORE.Constants.InstitutionConstants.UNAB)
                {
                    <div>
                        <a class="forget-password-label" asp-page="/EventPage/Index">Ver Eventos</a>
                    </div>
                }
                @if ((AKDEMIC.CORE.Constants.GeneralConstants.Institution.VALUE == AKDEMIC.CORE.Constants.InstitutionConstants.UNAB)
                        && Model.AllowRegistration)
                {
                    <div>
                        <a class="forget-password-label" asp-page="/UserRequestPage/Index">Solicitar registro al sistema</a>
                    </div>
                }
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        $(".group>i").hide();
        $(".group>i").click(function () {
            var x = document.getElementById("Input_Password");
            if (x.type === "password") {
                x.type = "text";
                this.className = "fa fa-eye-slash";
            }
            else {
                x.type = "password";
                this.className = "fa fa-eye";
            }
        });
        $("#Input_Password").on("focus", function () {
            $(".group>i").show();
            $(".ico:eq(1)").hide();
        }).on("blur", function () {
            if (this.value != "") return;
            $(".group>i").hide();
            $(".ico:eq(1)").show();
        });
    </script>
    <script src="~/js/areas/identity/account/login.js" asp-append-version="true"></script>
}