                @if ((AKDEMIC.CORE.Constants.GeneralConstants.Institution.VALUE == AKDEMIC.CORE.Constants.InstitutionConstants.UNAB)
                && Model.AllowRegistration)
                {
                    <div class="mt-2 text-center">
                        <a class="text-sm text-blue-600 hover:underline" asp-page="/UserRequestPage/Index">Solicitar registro al sistema</a>
                    </div>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(".fa-eye").hide();
        $(".fa-eye").click(function () {
            var x = document.getElementById("Input_Password");
            if (x.type === "password") {
                x.type = "text";
                this.className = "fa fa-eye-slash";
            }
            else {
                x.type = "password";
                this.className = "fa fa-eye";
            }
        });
        $("#Input_Password").on("focus", function () {
            $(".fa-eye").show();
            $(".ico:eq(1)").hide();
        }).on("blur", function () {
            if (this.value != "") return;
            $(".fa-eye").hide();
            $(".ico:eq(1)").show();
        });
    </script>
    <script src="~/js/areas/identity/account/login.js" asp-append-version="true"></script>
}


