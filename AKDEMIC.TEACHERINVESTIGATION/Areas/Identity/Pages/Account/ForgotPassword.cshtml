@page "/recuperar-clave"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Identity.Pages.Account.ForgotPasswordModel

@{
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
    int NeedUserName = Convert.ToInt32(ViewBag.NeedUserName);
}
<input id="NeedUserName" value="@NeedUserName" hidden />
<div class="m-login__wrapper">
    <div class="form">
        <a href="#">
            <img class="logo" src="~/images/themes/@AKDEMIC.CORE.Constants.GeneralConstants.GetTheme()/logo.png">
        </a>
        <h1>@AKDEMIC.TEACHERINVESTIGATION.Helpers.ConstantHelpers.PROJECT.NAME.ToUpper()</h1>
        <h5>Restablecer la contraseña</h5>
        <label>
            Introduzca su dirección de correo electrónico registrada abajo para recibir el enlace de restablecimiento de contraseña.
        </label>
        <form  method="post">
            <div asp-validation-summary="All" class="text-danger" style="font-weight: 500;"></div>
            <div class="group">
                <input asp-for="Input.Email" placeholder="CORREO" name="email" autocomplete="off" />
                <img src="~/images/login/mail.svg" style="width: 20px;float: right;margin-top: -28px;margin-right: 5px;" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div class="bar"></div>
            </div>
            <div class="group" style="margin-top:15px;display:@(NeedUserName == 0 ? "none":"block")">
                <input asp-for="Input.UserName" placeholder="USUARIO" name="username" autocomplete="off" />
                <img src="~/images/login/user.svg" style="width: 20px;float: right;margin-top: -28px;margin-right: 5px;" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                <div class="bar"></div>
            </div>
            <div class="group">
                <button class="btn button-submit" type="submit">
                    ENVIAR
                </button>
                <a class="forget-password-label" asp-page="/Account/Login">Regresar para iniciar sesión</a>
            </div>
        </form>
    </div>
</div>