@page "/reporte/proyecto-investigacion"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Report.Pages.InvestigationProjectPage.IndexModel
@{
    ViewData["Title"] = "Reporte de Proyectos";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Reporte de Proyectos" , Url = null }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <div class="form-group m-form__group col-xl-6">
                    <label>Tipo de Proyecto</label>
                    <select name="projectTypeId" id="projectTypeId" class="form-control">
                        <option value="0" selected>Todos</option>
                    </select>
                </div>
                <div class="form-group m-form__group col-xl-6">
                    <label>Financiamiento</label>
                    <select name="financingInvestigationId" id="financingInvestigationId" class="form-control">
                        <option value="0" selected>Todos</option>
                    </select>
                </div>
            </div>




            <br />
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lib/jquery.fileDownload/jquery.fileDownload.min.js"></script>
    <script src="~/js/areas/report/investigationproject/index.js" asp-append-version="true"></script>
}