@page "/reporte/convocatoria-investigacion"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Report.Pages.InvestigationConvocationPage.IndexModel
@{

    ViewData["Title"] = "Reporte de Convocatorias";
    ViewData["Breadcrumbs"] = new[] {
new BreadcrumbViewData { Name = "Reporte de Convocatorias" , Url = null }
};
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        @ViewData["Title"]
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">




            <div class="form-group m-form__group row">


                <div class="m-form__group-sub col-lg-6">
                    <label id="algo" class="required-form-label">Fecha de inicio</label>
                    <div class="m-input-icon m-input-icon--right">
                        <input id="startDate" class="form-control m-input" placeholder="Fecha de inicio" readonly />
                        <span class="m-input-icon__icon m-input-icon__icon--right">
                            <span>
                                <i class="la la-calendar"></i>
                            </span>
                        </span>
                    </div>
                </div>

                <div class="m-form__group-sub col-lg-6">
                    <label id="algo" class="required-form-label">Fecha de Fín</label>
                    <div class="m-input-icon m-input-icon--right">
                        <input id="endDate" class="form-control m-input" placeholder="Fecha de Fín" readonly />
                        <span class="m-input-icon__icon m-input-icon__icon--right">
                            <span>
                                <i class="la la-calendar"></i>
                            </span>
                        </span>
                    </div>
                </div>
            </div>




            <br />
            <table class="table table-striped table-bordered" id="data-table"></table>
        </div>
    </div>
</div>

