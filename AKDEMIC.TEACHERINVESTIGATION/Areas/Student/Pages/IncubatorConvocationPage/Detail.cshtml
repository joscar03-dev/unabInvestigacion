@page "/alumno/convocatoria-emprendimiento/{incubatorConvocationId:Guid}/Detalle"
@using Microsoft.AspNetCore.Html
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Student.Pages.IncubatorConvocationPage.DetailModel
@{
    ViewBag.Breadcrumbs = new[]
    {
new BreadcrumbViewData {Name="Convocatorias de emprendimiento", Url= "/alumno/convocatoria-emprendimiento"},
new BreadcrumbViewData {Name="Detalle", Url = null},
    };
}


<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <h3 class="m-portlet__head-text" style="display:initial;">
                        Convocatorias de Incubadora de Emprendimiento
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center m--margin-bottom-10">
                    <div class="col-md-12">
                        <h2 style="font-size:1.3rem">@Model.Input.Name</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 m--margin-bottom-30">
                        <div class="m--margin-bottom-5">
                            <span class="m-widget19__number m--font-brand m--margin-right-5 m--margin-left-5"><i class="flaticon-calendar-2"></i></span>
                            <span class="m-widget19__comment m--margin-right-5 m--margin-left-5">Fecha de Inscripción del <strong>@Model.Input.InscriptionStartDate</strong>   al <strong>@Model.Input.InscriptionEndDate</strong></span>
                        </div>
                        <div class="m--margin-bottom-5 m--margin-left-5">
                            @(new HtmlString(Model.Input.Requirements))
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div style="max-width: 450px; width: inherit; margin:auto; text-align:center">
                            <img style="max-width:100%" src="@($"/imagenes/{Model.Input.PicturePath}")" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <h3 class="m-portlet__head-text" style="display:initial;">
                        Formulario de Postulación
                    </h3>
                </div>
            </div>
        </div>
        <form id="create-form" class="m-form m-form--state" asp-area="Student" method="post" enctype="multipart/form-data">
            <input name="IncubatorConvocationId" value="@Model.Input.Id" type="hidden" />
            <div class="m-portlet__body">
                <div class="m-form__content">
                    <div class="m-alert m-alert--icon alert alert-danger m--hide" role="alert" id="m-form_alert">
                        <div class="m-alert__icon">
                            <i class="la la-warning"></i>
                        </div>
                        <div id="alert-text" class="m-alert__text">
                            @ViewBag.ErrorMessage
                        </div>
                        <div class="m-alert__close">
                            <button type="button" class="close" data-close="alert" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-12">
                        <label class="required-form-label">Título</label>
                        <div class="m-input-icon m-input-icon--right">
                            <input name="Title" type="text" class="form-control m-input" placeholder="Título" autocomplete="off" required />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group m-form__group row">
                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Presupuesto</label>
                        <div class="m-input-icon m-input-icon--right">
                            <input name="Budget" type="number" class="form-control m-input" placeholder="Presupuesto" autocomplete="off" required />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Duración en Meses</label>
                        <div class="m-input-icon m-input-icon--right">
                            <input name="MonthDuration" type="number" class="form-control m-input" placeholder="Duración en Meses" autocomplete="off" required />
                            <span class="m-input-icon__icon m-input-icon__icon--right">
                                <span>
                                    <i class="la la-info-circle"></i>
                                </span>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group m-form__group row">

                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Objetivos Generales</label>
                        <div class="input-group" style="flex-wrap:initial">
                            <textarea rows="5" name="GeneralGoals" class="form-control m-input" required></textarea>
                        </div>
                    </div>

                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Departamento</label>
                        <select id="DepartmentId" name="DepartmentId" class="form-control" required>
                            <option value="0" selected disabled>Seleccione un Departamento</option>
                        </select>
                    </div>
                </div>

                <div class="form-group m-form__group row">

                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Provincia</label>
                        <select id="ProvinceId" name="ProvinceId" class="form-control" required>
                            <option value="0" selected disabled>Seleccione una Provincia</option>
                        </select>
                    </div>

                    <div class="m-form__group-sub col-lg-6">
                        <label class="required-form-label">Distrito</label>
                        <select id="DistrictId" name="DistrictId" class="form-control" required>
                            <option value="0" selected disabled>Seleccione un Distrito</option>
                        </select>
                    </div>
                </div>


                <div class="m-separator m-separator--dashed m-separator--xs"></div>

                <h5>Documentos Solicitados</h5>
                <table class="table table-striped table-bordered" id="document-table"></table>
            </div>
            <div class="m-portlet__foot m-portlet__foot--fit m--align-right m--margin-top-10">
                <div class="m-form__actions">
                    <button id="btnSave" class="btn btn-primary m-btn m-btn--custom m-btn--icon" type="submit">
                        <span>
                            <i class="la la-save"></i>
                            &nbsp;&nbsp;
                            <span>
                                Guardar
                            </span>
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>



<div class="modal fade" id="add-document-modal" tabindex="-1" role="dialog" aria-labelledby="addLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-primary font-weight-bold" id="add-label">
                    Subir Documento
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="add-document-form" class="m-form m-form--state">
                <div class="modal-body">
                    <input name="Id" hidden />
                    <div class="form-group m-form__group">
                        <label class="required-form-label">Anexo</label>
                        <input type="text" name="Name" class="form-control m-input" disabled />
                    </div>
                    <div class="m-form__group">
                        <label class="required-form-label">Archivo</label>
                        <div class="custom-file">
                            <input class="form-control m-input custom-file-input" name="File" type="file" accept="application/pdf, application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document" placeholder="Seleccionar archivo" required>
                            <label class="custom-file-label selected">Seleccionar Archivo...</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cerrar
                    </button>
                    <button id="btnSaveDocument" type="submit" class="btn btn-primary ladda-button btn-addExternal" data-style="slide-down">
                        <span class="ladda-label">Guardar</span>
                        <span class="ladda-spinner"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/areas/student/incubatorconvocation/detail.js" type="text/javascript" asp-append-version="true"></script>
}