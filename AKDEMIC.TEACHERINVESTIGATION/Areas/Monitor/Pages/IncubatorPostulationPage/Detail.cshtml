@page "/monitor/postulaciones-incubadora/{incubatorPostulationId:Guid}/detalle"
@model AKDEMIC.TEACHERINVESTIGATION.Areas.Monitor.Pages.IncubatorPostulationPage.DetailModel
@{
        ViewBag.Breadcrumbs = new[] {
        new BreadcrumbViewData {Name="Postulaciones", Url = "/monitor/postulaciones-incubadora"},
        new BreadcrumbViewData {Name="Detalle", Url = null}
    };
}

<div class="m-content">
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <h3 class="m-portlet__head-text">
                        Detalle de la Convocatoria
                    </h3>
                </div>
            </div>

        </div>
          <div class="m-portlet__body">
            <input id="Id" name="Id" value="@Model.Input.Id" hidden />
            <div class="row">
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Codigo Convocatoria</label>
                    <input name="ConvocationCode" value="@Model.Input.ConvocationCode" class="form-control m-input" disabled />
                </div>
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Convocatoria</label>
                    <input name="ConvocationName" value="@Model.Input.ConvocationName" class="form-control m-input" disabled />

                </div>
            </div>

            <div class="row">
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Usuario Postulante</label>
                    <input name="PostulantCode" value="@Model.Input.PostulantCode" class="form-control m-input" disabled />
                </div>
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Postulante</label>
                    <input name="PostulantFullName" value="@Model.Input.PostulantFullName" class="form-control m-input" disabled />

                </div>
            </div>

            <div class="row">
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Título</label>
                    <input name="Title" value="@Model.Input.Title" class="form-control m-input" disabled />
                </div>
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Presupuesto</label>
                    <input name="Budget" value="@Model.Input.Budget" class="form-control m-input" disabled />

                </div>
            </div>

            <div class="row">
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Objetivos Generales</label>
                    <textarea id="GeneralGoals" rows="5" name="GeneralGoals" class="form-control" disabled>@Model.Input.GeneralGoals</textarea>
                </div>
            </div>

            <div class="row">
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Duración en Meses</label>
                    <input name="MonthDuration" value="@Model.Input.MonthDuration" class="form-control m-input" disabled />
                </div>
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Departamento</label>
                    <input name="DeparmentText" value="@Model.Input.DepartmentText" class="form-control m-input" disabled />
                </div>
            </div>

            <div class="row">
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Provincia</label>
                    <input name="ProvinceText" value="@Model.Input.ProvinceText" class="form-control m-input" disabled />
                </div>
                <div class="form-group m-form__group col-lg-6">
                    <label class="form-control-label">Distrito</label>
                    <input name="DistrictText" value="@Model.Input.DistrictText" class="form-control m-input" disabled />
                </div>

            </div>

        </div>
    </div>

    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <h3 class="m-portlet__head-text" style="display:initial;">
                        Miembros del Equipo
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="team-table"></table>
        </div>
    </div>

    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption" style="width:100%">
                <div class="m-portlet__head-title" style="width:100%;display: block;">
                    <h3 class="m-portlet__head-text" style="display:initial;">
                        Anexos
                    </h3>
                </div>
            </div>
        </div>
        <div class="m-portlet__body">
            <div class="m-form--label-align-right m--margin-bottom-20">
                <div class="row align-items-center">
                    <div class="col-xl-8 order-2 order-xl-1">
                        <div class="row">
                            <div class="form-group m-form__group col-xl-4">
                                <div class="m-input m-input-icon m-input-icon--left">
                                    <input type="text" class="form-control m-input m-input--pill m-input--solid" placeholder="Buscar..." id="search">
                                    <span class="m-input-icon__icon m-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-bordered" id="annex-table"></table>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/areas/monitor/incubatorpostulation/detail.js" asp-append-version="true"></script>
}